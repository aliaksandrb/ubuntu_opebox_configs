#alignment bottom_middle
#alignment none
 
gap_x 10
gap_y 0
 
no_buffers yes
 
uppercase no
 
cpu_avg_samples 2
 
override_utf8_locale yes
 
TEXT

${alignr}${offset -890}${font Secret Code:size=35}${time %H:%M}${font Secret Code:size=20} / ${time %d %b %Y}
